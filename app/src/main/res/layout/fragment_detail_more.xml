        </com.google.android.material.card.MaterialCardView>

        <TextView

            android:id="@+id/text_breeding"
            style="@style/DetailTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Breeding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView_training" />

        <com.google.android.material.card.MaterialCardView

            android:id="@+id/cardView_breeding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_breeding">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    textBackgroundByType="@{viewModel.selectedPokemon.types[0]}"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    android:id="@+id/tv_egg_1"
                    style="@style/DetailTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/text_view_round_bg"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:text="@{viewModel.selectedPokemonDetail.eggGroups[0]}"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:textAlignment="center"
                    textBackgroundByType="@{viewModel.selectedPokemon.types[0]}"
android:textStyle="bold"
                    android:id="@+id/tv_egg_2"
                    style="@style/DetailTextStyle"
                    eggGroup2="@{viewModel.selectedPokemonDetail.eggGroups}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/text_view_round_bg"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_egg_1" />

                <TextView
                    android:id="@+id/text_egg_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Egg Groups"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_egg_2"
                    app:layout_constraintStart_toStartOf="@+id/tv_egg_2"
                    app:layout_constraintTop_toBottomOf="@id/tv_egg_2" />

                <TextView
                    android:textAlignment="center"
                    textBackgroundByType="@{viewModel.selectedPokemon.types[0]}"
                    android:textStyle="bold"

                    android:id="@+id/tv_hatch_step"
                    style="@style/DetailTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/text_view_round_bg"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:text="@{String.valueOf(viewModel.selectedPokemonDetail.hatchCounter)}"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_egg_group" />


                <TextView
                    android:id="@+id/text_cycles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Egg cycles"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_hatch_step"
                    app:layout_constraintStart_toStartOf="@+id/tv_hatch_step"
                    app:layout_constraintTop_toBottomOf="@id/tv_hatch_step" />


