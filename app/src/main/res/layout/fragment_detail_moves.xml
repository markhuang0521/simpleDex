<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mingDev.cleanpokedex.pokemonDex.PokedexViewModel" />

        <variable
            name="clickListener"
            type="com.mingDev.cleanpokedex.ui.PokemonListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        layoutBackgroundColorByType="@{viewModel.selectedPokemon.types[0]}"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:background="@color/grass"
        tools:context=".pokemonDetail.DetailMovesFragment">

        <!--        pokemon name / image-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView_pokemon_name"

            backgroundColorByType="@{viewModel.selectedPokemon.types[0]}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:cardBackgroundColor="@color/grass">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:background="@drawable/item_pokemon_detail_bg">

                <!--                <ToggleButton-->
                <!--                    android:id="@+id/btn_is_caught"-->
                <!--                    android:layout_width="36dp"-->
                <!--                    android:layout_height="36dp"-->
                <!--                    android:layout_marginEnd="8dp"-->
                <!--                    android:background="@android:color/transparent"-->
                <!--                    android:checked="@={viewModel.selectedPokemon.caught}"-->
                <!--                    android:drawableStart="@drawable/is_checked_btn_state"-->
                <!--                    android:onClick="@{()->clickListener.onCatchBtnClick(viewModel.selectedPokemon)}"-->
                <!--                    android:textSize="0sp"-->
                <!--                    app:layout_constraintBottom_toBottomOf="@+id/tv_poke_desc"-->
                <!--                    app:layout_constraintEnd_toStartOf="@+id/iv_poke_ball"-->
                <!--                    app:layout_constraintStart_toEndOf="@+id/tv_poke_desc"-->
                <!--                    app:layout_constraintTop_toTopOf="@+id/tv_poke_desc"-->
                <!--                    tools:drawableStart="@drawable/is_checked_btn_state" />-->


                <ImageView
                    android:id="@+id/iv_poke_ball"
                    pokemonImageUrl="@{viewModel.selectedPokemon}"
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    android:contentDescription="pokeball"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/type_poison" />

                <TextView

                    android:id="@+id/tv_poke_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/roboto_black"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@{viewModel.selectedPokemon.name}"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/roboto_black"
                    app:layout_constraintBottom_toTopOf="@+id/tv_poke_desc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="bulsdsa" />

                <TextView
                    android:id="@+id/tv_poke_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="@{`A `+viewModel.selectedPokemonDetail.genera}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/recycler_type_list"
                    app:layout_constraintStart_toStartOf="@id/tv_poke_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_poke_name"
                    tools:text="213131231 pokemon" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_type_list"
                    typeLiveData="@{viewModel.selectedPokemon.types}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_poke_ball"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_text_moveSet"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="10dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/cardView_pokemon_name">

            <LinearLayout
                layoutBackgroundColorByType="@{viewModel.selectedPokemon.types[0]}"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="10"
                tools:background="@color/grass">

                <TextView
                    android:id="@+id/tv_move_name"
                    style="@style/DetailTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.7"
                    android:gravity="center"
                    android:paddingStart="40dp"
                    android:text="Move Name"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_power"

                    style="@style/DetailTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="Power"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_accuracy"

                    style="@style/DetailTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:text="Acc"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_pp"
                    style="@style/DetailTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PP."
                    android:textSize="14sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_move_set_list"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_text_moveSet"
            tools:listitem="@layout/item_move_set" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>