<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mingDev.cleanpokedex.pokemonMove.MoveSetViewModel" />

    </data>
    <!--    motion scene to scroll recyclerview to top.-->

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/layout_motion_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_move_detail_scene">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/layout_move_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.MoveListDetailFragment">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_move_name"
                backgroundColorByType="@{viewModel.selectedMove.type}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_move_name"
                    style="@style/DetailTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@{viewModel.selectedMove.name}"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="ace op"
                    tools:textColor="@color/water" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_type"
                backgroundColorByType="@{viewModel.selectedMove.type}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"

                android:elevation="8dp"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_move_name"
                app:layout_constraintWidth_percent=".3">

                <TextView

                    style="@style/typeTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_pokemon_type_bg"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="@{viewModel.selectedMove.type}"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="type" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_contest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="12dp"
                android:elevation="8dp"
                app:cardBackgroundColor="@color/teal_200"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toEndOf="@id/card_type"
                app:layout_constraintTop_toTopOf="@id/card_type"
                app:layout_constraintWidth_percent=".3">

                <TextView
                    style="@style/typeTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_pokemon_type_bg"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="@{viewModel.selectedMove.damageClass}"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="contest" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_damage_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:elevation="8dp"
                app:cardBackgroundColor="@color/Light_blue"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toEndOf="@id/card_contest"
                app:layout_constraintTop_toTopOf="@id/card_type"
                app:layout_constraintWidth_percent=".3">

                <TextView
                    style="@style/typeTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_pokemon_type_bg"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="@{viewModel.selectedMove.damageClass}"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="contest" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Type"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/card_type"
                app:layout_constraintStart_toStartOf="@id/card_type"
                app:layout_constraintTop_toBottomOf="@id/card_type" />

            <TextView
                android:id="@+id/text_contest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Contest"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/card_contest"
                app:layout_constraintStart_toStartOf="@id/card_contest"
                app:layout_constraintTop_toBottomOf="@id/card_contest" />

            <TextView
                android:id="@+id/text_damage_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Category"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/card_damage_type"
                app:layout_constraintStart_toStartOf="@id/card_damage_type"
                app:layout_constraintTop_toBottomOf="@id/card_damage_type" />

            <TextView
                android:id="@+id/tv_power"
                style="@style/MoveTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@{String.valueOf(viewModel.selectedMove.power)}"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_type"
                app:layout_constraintWidth_percent=".33"
                tools:text="100" />

            <TextView
                android:id="@+id/tv_accuracy"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewModel.selectedMove.accuracy)}"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@id/tv_power"
                app:layout_constraintTop_toTopOf="@id/tv_power"
                app:layout_constraintWidth_percent=".33"
                tools:text="100" />

            <TextView
                android:id="@+id/tv_pp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewModel.selectedMove.pp)}"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@id/tv_accuracy"
                app:layout_constraintTop_toTopOf="@id/tv_power"
                app:layout_constraintWidth_percent=".33"
                tools:text="100" />

            <TextView
                android:id="@+id/text_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Power"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_power"
                app:layout_constraintStart_toStartOf="@id/tv_power"
                app:layout_constraintTop_toBottomOf="@id/tv_power" />

            <TextView
                android:id="@+id/text_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Accuracy"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_accuracy"
                app:layout_constraintStart_toStartOf="@id/tv_accuracy"
                app:layout_constraintTop_toBottomOf="@id/tv_accuracy" />

            <TextView
                android:id="@+id/text_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="PP."
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_pp"
                app:layout_constraintStart_toStartOf="@id/tv_pp"
                app:layout_constraintTop_toBottomOf="@id/tv_pp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_game_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/text_power">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingMultiplier="1.2"
                        android:text="Game Description"
                        android:textAllCaps="true"
                        android:textColor="@color/water"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@{viewModel.selectedMove.shortEffect}"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        tools:text="1231223213" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/card_game_desc">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="in-depth Effect"

                        android:textAllCaps="true"
                        android:textColor="@color/water"
                        android:textSize="20sp" />

                    <!--scrolling view in fragment-->
                    <TextView
                        android:id="@+id/tv_detail_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:lineSpacingMultiplier="1.2"
                        android:maxLines="5"
                        android:padding="5dp"
                        android:scrollbars="vertical"
                        android:text="@{viewModel.selectedMove.detailEffect}"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        tools:text="1231223213\n dasdasd" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_pokemon_learn_move"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_move_detail">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_pokemon_learn_move"
                backgroundColorByType="@{viewModel.selectedMove.type}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@id/recycler_pokemon_learned_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_bold"

                    android:padding="3dp"
                    android:text="@{`pokemons that can learn  ` +viewModel.selectedMove.name}"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/recycler_pokemon_learned_list" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_pokemon_learned_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_pokemon_learn_move" />

            <ProgressBar
                android:id="@+id/progressBar"
                viewVisible="@{viewModel.showLoading.booleanValue()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/psychic"
                app:layout_constraintBottom_toBottomOf="@id/recycler_pokemon_learned_list"
                app:layout_constraintEnd_toEndOf="@id/recycler_pokemon_learned_list"
                app:layout_constraintStart_toStartOf="@id/recycler_pokemon_learned_list"
                app:layout_constraintTop_toTopOf="@id/recycler_pokemon_learned_list"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>