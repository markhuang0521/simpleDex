<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="com.mingDev.cleanpokedex.ui.PokemonGenerationFragment.ClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toTopOf="@+id/iv_gen1"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                style="@style/typeTextStyle"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@color/water"
                android:gravity="center"
                android:onClick='@{()->clickListener.onGenClick("")}'
                android:padding="3dp"
                android:text="Choose All Gens"
                android:textSize="18sp" />
        </com.google.android.material.card.MaterialCardView>

        <ImageView

            android:id="@+id/iv_gen1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick='@{()->clickListener.onGenClick("generation-i")}'
            android:src="@drawable/gen1"
            app:layout_constraintBottom_toTopOf="@+id/iv_gen2"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView1" />

        <ImageView
            android:id="@+id/iv_gen2"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick='@{()->clickListener.onGenClick("generation-ii")}'
            android:src="@drawable/gen2"
            app:layout_constraintBottom_toTopOf="@+id/iv_gen3"
            app:layout_constraintTop_toBottomOf="@+id/iv_gen1" />

        <ImageView
            android:id="@+id/iv_gen3"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick='@{()->clickListener.onGenClick("generation-iii")}'
            android:src="@drawable/gen3"
            app:layout_constraintBottom_toTopOf="@+id/iv_gen4"
            app:layout_constraintTop_toBottomOf="@+id/iv_gen2" />

        <ImageView
            android:id="@+id/iv_gen4"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick='@{()->clickListener.onGenClick("generation-iv")}'
            android:src="@drawable/gen4"
            app:layout_constraintBottom_toTopOf="@+id/iv_gen5"
            app:layout_constraintTop_toBottomOf="@+id/iv_gen3" />

        <ImageView
            android:id="@+id/iv_gen5"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick='@{()->clickListener.onGenClick("generation-v")}'
            android:src="@drawable/gen5"
            app:layout_constraintBottom_toTopOf="@+id/iv_gen6"
            app:layout_constraintTop_toBottomOf="@+id/iv_gen4"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/iv_gen6"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick='@{()->clickListener.onGenClick("generation-vi")}'
            android:src="@drawable/gen6"
            app:layout_constraintBottom_toTopOf="@+id/iv_gen7"
            app:layout_constraintTop_toBottomOf="@+id/iv_gen5" />

        <ImageView
            android:id="@+id/iv_gen7"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick='@{()->clickListener.onGenClick("generation-vii")}'
            android:src="@drawable/gen7"
            app:layout_constraintBottom_toTopOf="@+id/iv_gen8"
            app:layout_constraintTop_toBottomOf="@+id/iv_gen6" />

        <ImageView
            android:id="@+id/iv_gen8"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick='@{()->clickListener.onGenClick("generation-viii")}'
            android:src="@drawable/gen8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_gen7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>